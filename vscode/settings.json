    "files.associations": {
        "*.js": "javascript",
        ".bash*": "shellscript"
    },
    "editor.tabSize": 2,
    "sync.gist": "35a9ee2291342e8a15c39c5081f02981",
    "auto-close-tag.activationOnLanguage": [
        "xml",
        "php",
        "blade",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "liquid",
        "erb",
        "lang-cfml",
        "cfml",
        "HTML (Eex)"
    ],
    "window.newWindowDimensions": "inherit",
    "workbench.colorTheme": "One Dark Pro",
    "explorer.confirmDelete": false,
    "go.buildOnSave": "off",
    "window.restoreWindows": "none",
    "terminal.integrated.macOptionIsMeta": true,
    "explorer.autoReveal": false,
    "workbench.startupEditor": "newUntitledFile",
    "remote.SSH.configFile": "/Users/randy/.ssh/config_vscode",
    "files.trimTrailingWhitespace": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "editor.linkedEditing": true,
    "tidyHtml.formatOnSave": false,
    "tidyHtml.optionsTidy": {
        "break-before-br": false,
        "indent-attributes": false,
        "indent-spaces": 4,
        "indent-with-tabs": false,
        "indent": "auto",
        "input-xml": false,
        "markup": true,
        "numeric-entities": false,
        "output-xml": false,
        "preserve-entities": true,
        "quote-ampersand": false,
        "quote-marks": false,
        "quote-nbsp": true,
        "show-errors": 6,
        "show-warnings": true,
        "sort-attributes": "alpha",
        "uppercase-attributes": false,
        "uppercase-tags": false,
        "wrap": 0
    },
    "redhat.telemetry.enabled": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "go.addTags": {
        "transform": "camelcase"
    },
    "java.help.showReleaseNotes": false,
    "eslint.format.enable": true,
    "terminal.integrated.defaultProfile.osx": "bash",
    "ruby.lint": {
        "rubocop": true
    },
    "ruby.specClearTerminal": false,
    "ruby.specCommand": "bundle exec rspec",
    "ruby.rubocop.useBundler": true,
    "ruby.interpreter.commandPath": "/Users/randy/.rbenv/shims/ruby",
    "git.confirmSync": false,
    "cSpell.enabled": true,
    "python.diagnostics.sourceMapsEnabled": true
}
