        "ruby",
        "rust",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yml"
    ],
    "cSpell.languageSettings": [
        {
            "languageId": "plantuml",
            "dictionaries": [
                "backwards-compatibility",
                "companies",
                "en_us",
                "filetypes",
                "plantuml",
                "softwareTerms"
            ]
        }
    ],
    "cSpell.userWords": [
