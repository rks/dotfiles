// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "FiraCode-Light",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        100
    ],
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "keyword.control"
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground": "#c792ea"
                }
            },
            {
                "scope": [
                    "punctuation.definition.variable.ruby",
                    "variable.other.readwrite.instance.ruby"
                ],
                "settings": {
                    "foreground": "#f07178"
                }
            },
            {
                "scope": [
                    "entity.other.attribute-name.html",
                    "entity.other.attribute-name.id.html"
                ],
                "settings": {
                    "foreground": "#ffcb6b"
                }
            },
            {
                "scope": [
                    "punctuation.section.embedded.begin.erb",
                    "punctuation.section.embedded.end.erb"
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            }
        ]
    },
    "editor.wordWrapColumn": 100,
    "files.exclude": {
        "**/._*": true,
        "**/.rubocop-http*": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "materialTheme.cache.workbench.settings": {
        "themeColours": "Default"
    },
    "perforce.editOnFileModified": true,
    "ruby.specClearTerminal": false,
    "ruby.specCommand": "bundle exec rspec",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true
    },
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 16,
    "window.titleBarStyle": "native",
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "city-lights-icons-vsc-light",
    "workbench.startupEditor": "newUntitledFile",

    // Language-specific
    "[erb]": {
        "editor.rulers": [],
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.rulers": [],
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.tabSize": 4
    },
    "[json]": {
        "editor.tabSize": 4
    },
    "[jsonc]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "cSpell.enableFiletypes": [
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
        "handlebars",
        "html",
        "jade",
        "javascript",
        "javascriptreact",
        "json",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pub",
        "python",
        "restructuredtext",
        "ruby",
        "rust",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yml"
    ],
    "editor.renderWhitespace": "all",
    "cSpell.userWords": [
        "",
        "Enqueues",
        "Evented",
        "Gemfile",
        "Kubernetes",
        "Microservices",
        "Stateful",
        "UUID",
        "backtrace",
        "bootsnap",
        "buildable",
        "calculon",
        "dedham",
        "jmullin",
        "kdusane",
        "mathworks",
        "matlab",
        "mjonchhe",
        "namespacing",
        "norwood",
        "pidfile",
        "railtie",
        "readonly",
        "richag",
        "rsouza",
        "rspec",
        "rubocop",
        "serializer",
        "souza",
        "sshivara",
        "webaddons"
    ],
    "files.associations": {
        "*.js": "javascript"
    },
    "editor.tabSize": 2,
    "sync.gist": "35a9ee2291342e8a15c39c5081f02981",
    "auto-close-tag.activationOnLanguage": [
        "xml",
        "php",
        "blade",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "liquid",
        "erb",
        "lang-cfml",
        "cfml",
        "HTML (Eex)"
    ],
    "window.newWindowDimensions": "inherit",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "One Dark Pro",
    "explorer.confirmDelete": false,
    "ruby.lint": {
        "rubocop": true
    },
    "go.buildOnSave": "off",
    "window.restoreWindows": "none",
    "terminal.integrated.macOptionIsMeta": true,
    "explorer.autoReveal": false
}
