// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "FiraCodeNerdFontComplete-Light",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        100
    ],
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "keyword.control"
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground": "#c792ea"
                }
            },
            {
                "scope": [
                    "punctuation.definition.variable.ruby",
                    "variable.other.readwrite.instance.ruby"
                ],
                "settings": {
                    "foreground": "#f07178"
                }
            },
            {
                "scope": [
                    "entity.other.attribute-name.html",
                    "entity.other.attribute-name.id.html"
                ],
                "settings": {
                    "foreground": "#ffcb6b"
                }
            },
            {
                "scope": [
                    "punctuation.section.embedded.begin.erb",
                    "punctuation.section.embedded.end.erb"
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            }
        ]
    },
    "editor.wordWrapColumn": 100,
    "files.exclude": {
        "**/._*": true,
        "**/.rubocop-http*": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.insertFinalNewline": true,
    "perforce.editOnFileModified": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true
    },
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 16,
    "window.titleBarStyle": "native",
    "workbench.editor.enablePreview": false,

    // Language-specific
    "[dot]": {
        "editor.rulers": [],
        "editor.tabSize": 4
    },
    "[erb]": {
        "editor.rulers": [],
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.rulers": [],
        "editor.tabSize": 4,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.tabSize": 4
    },
    "[json]": {
        "editor.tabSize": 4
    },
    "[jsonc]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "editor.renderWhitespace": "all",

    // code-spell-checker
    "cSpell.dictionaryDefinitions": [
        {
            "name": "plantuml",
            "path": "~/projects/vscode/plantuml.dict.txt"
        }
    ],
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/objects",
        ".vscode",
        ".vscode-insiders",
        "target"
    ],
    "cSpell.enableFiletypes": [
        "!gemfile",
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
        "handlebars",
        "html",
        "jade",
        "javascript",
        "javascriptreact",
        "json",
